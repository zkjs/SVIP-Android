<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ItemTitle">
        <attr name="leftImage" format="reference"></attr>
        <attr name="rightImage" format="reference"></attr>
        <attr name="itemTitle" format="string"></attr>
        <attr name="itemTitleColor" format="string"></attr>
    </declare-styleable>

    <declare-styleable name="ItemUserSetting">
        <attr name="itemSettingTitle" format="string"></attr>
        <attr name="itemSettingContent1" format="string"></attr>
        <attr name="itemSettingContent2" format="string"></attr>
        <attr name="itemTextSlash" format="string"></attr>
    </declare-styleable>

    <declare-styleable name="GooeyMenu">
        <attr name="no_of_menu" format="integer" />
        <attr name="fab_radius" format="dimension" />
        <attr name="menu_radius" format="dimension" />
        <attr name="gap_between_menu_fab" format="dimension" />
        <attr name="menu_drawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleLoadingView">
        <attr name="center_radius" format="dimension" />
        <attr name="colorback" format="color"/>
    </declare-styleable>

    <declare-styleable name="ItemShowView">
        <attr name="isvTitle" format="string" />
        <attr name="isvValue" format="string" />
        <attr name="isvHint"  format="string" />
        <attr name="haveUpLine" format="boolean" />
        <attr name="haveDownLine" format="boolean" />
        <attr name="isMust" format="boolean" />
        <attr name="isShowIcon" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ItemCbxView">
        <attr name="icvTitle" format="string" />
        <attr name="icvValue" format="boolean" />
        <attr name="icvUpLine" format="boolean" />
        <attr name="icvDownLine" format="boolean" />
        <attr name="icvLeftImage" format="reference|integer" />
    </declare-styleable>

    <declare-styleable name="ItemNumView">
        <attr name="invTitle" format="string" />
        <attr name="invValue" format="string" />
        <attr name="invHint"  format="string" />
        <attr name="invUpLine" format="boolean" />
        <attr name="invDownLine" format="boolean" />
        <attr name="invIsMust" format="boolean" />
        <attr name="invShowBtn" format="boolean" />
    </declare-styleable>

</resources>
