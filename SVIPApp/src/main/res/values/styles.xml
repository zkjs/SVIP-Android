<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LineC7C7C7" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#C7C7C7</item>
    </style>

    <style name="ActionTheme.DataSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/DataSheetAnimation</item>
    </style>

    <style name="LeftMenuText">
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:drawablePadding">20dp</item>
       <item name="android:background">@drawable/leftmenu_tv_bgcolor</item>
    </style>

    <style name="GrayLineBorder" >
        <item name="android:background">#E3E3E3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="sex_radio_item">
        <item name="android:layout_width">30dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/set_radio_textcolor</item>
    </style>

    <style name="shop_radio_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/shop_radio_btn</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/shop_radio_textcolor</item>
    </style>

    <style name="tags_check_item">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:drawableLeft">@null</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/set_check_textcolor</item>
    </style>

    <style name="tags_toggle" parent="android:Widget">
        <item name="android:background">@drawable/btn_toggle_bg</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">12dp</item>
    </style>

    <style name="dialog_no_title">
        <item
            name="android:windowNoTitle">true</item>
        <item
            name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="cb_evaluate_star">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="iv_star">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@mipmap/ic_star_nor</item>
    </style>

    <style name="main_tab_bottom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/footer_tab_text_size</item>
        <item name="android:textColor">@color/footer_tab_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ui_parent_Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="city_hot_header" parent="@style/ui_parent_Wrap">
        <item name="android:textSize">@dimen/city_list_text_size</item>
        <item name="android:textColor">@color/city_item_letter_color</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="cityLocatingProgressStyle">
        <item name="android:maxWidth">16.0dip</item>
        <item name="android:maxHeight">24.0dip</item>
        <item name="android:indeterminateDrawable">@anim/city_locating_anim</item>
        <item name="android:minWidth">16.0dip</item>
        <item name="android:minHeight">24.0dip</item>
    </style>

    <style name="MyDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/common_alert_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
