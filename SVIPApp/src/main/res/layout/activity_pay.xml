<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:background="#ffffff">

    <ImageButton
        android:id="@+id/btn_cancel"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@null"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_quxiao_gary"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginLeft="20dp"
            android:text="支付提示"/>

        <TextView
            android:id="@+id/shopname_tv"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="长沙芙蓉国温特姆至尊豪庭大酒店"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="¥ 199.00"
            android:textColor="#000000"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/problem_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="有问题拒绝支付"
            android:textColor="#4682B4"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/confirm_btn"
            android:layout_marginTop="30dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="确定支付"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:background="@drawable/btn_selector_shape"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/orderno_tv"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="订单号：21654875584545"
            android:textColor="#888888"
            android:textSize="14sp"/>

    </LinearLayout>





</RelativeLayout>
