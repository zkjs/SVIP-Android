<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zkjinshi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdfdf"
    android:orientation="vertical">

    <!--标题-->
    <com.zkjinshi.svip.view.ItemTitleView
        android:id="@+id/itv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#191223"
        zkjinshi:itemTitle="酒店名"
        zkjinshi:leftImage="@mipmap/ic_fanhui"
        zkjinshi:itemTitleColor="#FFFFFF"
        />
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_send_booking_order"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="立即预定"
        android:textSize="16sp"
        android:textColor="@color/White"
        android:background="@drawable/btn_yellow_selector"/>

    <ScrollView
        android:scrollbars="none"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/itv_title"
        android:layout_above="@id/btn_send_booking_order">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--房型选择-->
            <RelativeLayout
                android:id="@+id/rl_order_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/iv_room_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_room_pic_default"/>

                <LinearLayout
                    android:id="@+id/rl_yuan"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bg_yuan">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal|bottom"
                        android:id="@+id/relativeLayout">

                        <TextView
                            android:id="@+id/tv_RMB_symbol"
                            android:textSize="13sp"
                            android:padding="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/OrangeFB880E"
                            android:text="¥" />

                        <TextView
                            android:id="@+id/tv_payment"
                            android:textSize="20dp"
                            android:padding="2dp"
                            android:inputType="numberDecimal"
                            android:textColor="@color/OrangeFB880E"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--------"
                            android:layout_centerHorizontal="true" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_room_type"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_room_type"
                            android:padding="2dp"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="@color/Black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="豪华大床" />

                        <View
                            android:id="@+id/v_line"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/tv_room_type"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignLeft="@id/tv_room_type"
                            android:layout_alignRight="@id/tv_room_type"
                            android:background="@color/Gray9E9E9E"
                            ></View>

                        <TextView
                            android:id="@+id/tv_order_status"
                            android:padding="2dp"
                            android:textSize="13sp"
                            android:textColor="@color/Gray7C7C7C"
                            android:layout_width="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content"
                            android:text="点击修改房型"
                            android:layout_below="@id/v_line" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <!--入住离店日期-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/White"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/llt_date_container"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_text_date"
                    android:padding="5dp"
                    android:text="入住/离店日期"
                    android:textSize="16sp"
                    android:textColor="@color/Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="xx月xx日"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_margin="5dp"
                            android:id="@+id/tv_arrive_date" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="xx月xx日"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_margin="5dp"
                            android:id="@+id/tv_leave_date" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tv_date_tips"
                            android:textColor="#7C7C7C"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="共2晚，在xx月xx日13点前退房"/>

                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_get_into_w"/>
                </LinearLayout>
            </LinearLayout>

            <!--房间数量-->
            <com.zkjinshi.svip.view.ItemUserSettingView
                android:id="@+id/aod_room_number"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                zkjinshi:itemSettingTitle="房间数量"
                android:background="#ffffff"/>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>