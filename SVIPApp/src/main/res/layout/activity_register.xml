<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/login_layout_head"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_white">

        <ImageButton
            android:id="@+id/header_bar_btn_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center_horizontal"
            android:background="@null"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_fanhui_orange"
            android:visibility="visible" />

        <TextView
            android:id="@+id/login_tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="#666666"
            android:textSize="18sp"/>


    </RelativeLayout>

    <View
        android:layout_below="@id/login_layout_head"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3e3e3"/>

    <RelativeLayout
        android:id="@+id/layout_input_phone"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_layout_head"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_input_phone"
            android:layout_width="300dp"
            android:layout_centerVertical="true"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:hint="@string/please_input_phone_number"
            android:inputType="number"
            android:drawableLeft="@mipmap/ic_yonghu_nor"
            android:drawablePadding="10dp"
            android:maxLength="11"
            android:background="@drawable/bg_login_etv"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#666666"
            android:textColorHint="#b8b8b8"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/login_iv_clear_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_quxiao_gary"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_verify_code"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout_input_phone"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="48dp">

        <EditText
            android:id="@+id/et_verify_code"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:drawableLeft="@mipmap/ic_mima_nor"
            android:drawablePadding="10dp"
            android:maxLength="6"
            android:background="@drawable/bg_login_etv"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#666666"
            android:textColorHint="#b8b8b8"
            android:textSize="14sp"
            android:imeOptions="actionGo"/>

            <ImageView
                android:id="@+id/login_iv_verify_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_quxiao_gary"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_send_verify_code"
            android:clickable="true"
            android:layout_width="97dp"
            android:layout_marginLeft="5dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="发送验证码"
            android:background="@drawable/bg_login_etv_default_shape"
            android:textColor="#666666"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout_verify_code"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_tv_use_deal_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击确定，即同意"
            android:visibility="gone"
            android:textColor="#9e9e9e"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/login_tv_use_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《使用协议》"
            android:clickable="true"
            android:textColor="@color/orange"
            android:textSize="12sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="注册"
        android:visibility="gone"
        android:textSize="14sp"
        android:textColor="@color/White"
        android:background="@drawable/btn_yellow_selector"/>

</RelativeLayout>