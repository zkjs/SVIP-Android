<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mohu_rlt">

    <LinearLayout
        android:id="@+id/content_llt"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/view_white_shape">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageSdv"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="250dp"
            android:layout_height="194dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@mipmap/img_yaoqingyonghu"
            fresco:placeholderImageScaleType="fitXY"/>

        <TextView
            android:id="@+id/ad_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@null"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:textColor="#101010"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/ad_des_tv"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:text="@null"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="30dp"
            android:lineSpacingMultiplier="1.5"/>

        <LinearLayout
            android:id="@+id/ad_open_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#E3E3E3"/>

            <TextView
                android:id="@+id/ad_open_tv"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:clickable="true"
                android:textColor="@color/beacon_btn_textcolor"
                android:layout_height="50dp"
                android:text="@null"/>
            
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
