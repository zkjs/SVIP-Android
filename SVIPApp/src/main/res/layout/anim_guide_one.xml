<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_cloud_2"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="124dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/defoult_cloud_2"/>

    <ImageView
        android:layout_below="@id/iv_cloud_2"
        android:id="@+id/iv_default_ufo"
        android:layout_marginTop="24dp"
        android:background="@mipmap/defoult_ufo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_cloud_1"
        android:layout_marginTop="82dp"
        android:layout_marginLeft="56dp"
        android:layout_toRightOf="@id/iv_cloud_2"
        android:background="@mipmap/defoult_cloud_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>