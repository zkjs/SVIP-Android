<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/login_layout_head"
        android:layout_width="match_parent"
        android:layout_height="267dp"
        android:background="@mipmap/bg_zhuce">

        <TextView
            android:id="@+id/login_tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Welcome"
            android:textColor="@drawable/bg_white"
            android:textSize="40sp"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_input_phone"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_layout_head"
        android:layout_height="wrap_content">
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_verify_code"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout_input_phone"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_verify_code"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:hint="请输入使用密钥"
            android:inputType="text"
            android:drawableLeft="@mipmap/ic_mima_nor"
            android:drawablePadding="10dp"
            android:maxLength="11"
            android:background="@drawable/bg_login_etv"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#666666"
            android:textColorHint="#b8b8b8"
            android:textSize="14sp"
            android:imeOptions="actionGo"/>


    </LinearLayout>


    <Button
        android:id="@+id/btn_confirm"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="开始体验"
        android:visibility="gone"
        android:textSize="14sp"
        android:textColor="@color/White"
        android:background="@drawable/btn_yellow_selector"/>

</RelativeLayout>
