<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="6.0dip"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    android:paddingTop="6.0dip">

    <include
        android:id="@+id/datetime"
        layout="@layout/dataline_time_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/datetime"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/icon"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            fresco:actualImageScaleType="centerInside"
            fresco:placeholderImage="@mipmap/list_img_selfish"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundAsCircle="true"
            fresco:roundedCornerRadius="0dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <!--<TextView-->
            <!--android:id="@+id/name"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="13dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:text="@null"-->
            <!--android:textColor="#6C6C6C"-->
            <!--android:textSize="12sp" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/content_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:addStatesFromChildren="true"
                    android:background="@drawable/bg_chat_left_white"
                    android:clickable="true"
                    android:gravity="center_vertical|left"
                    android:lineSpacingExtra="2.0dip"
                    android:paddingLeft="17.0dip"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="email|phone|web"
                        android:gravity="center_vertical|left"
                        android:lineSpacingExtra="2.0dip"
                        android:maxWidth="270dp"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="100.0dip"
                        android:maxWidth="100.0dip"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:clickable="false"
                        android:gravity="center"
                        android:scaleType="centerInside"
                        android:src="@mipmap/skin_aio_ptt_record_friend_nor"
                        android:visibility="gone" />

                    <include
                        layout="@layout/dataline_card_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="10dp"
                    android:clickable="false"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:lineSpacingExtra="2dp"
                    android:minHeight="50dp"
                    android:text=""
                    android:textColor="#ff000000"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/erricon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:src="@drawable/aio_send_fail"
            android:visibility="gone" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/datetime"
        android:layout_marginLeft="10dip"
        android:background="@null"
        android:button="@null"
        android:clickable="false"
        android:drawableLeft="@drawable/checkbox_selector"
        android:visibility="gone" />

</RelativeLayout>