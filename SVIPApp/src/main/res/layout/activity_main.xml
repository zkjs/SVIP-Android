<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#aaaaaa">

    <ScrollView
        android:scrollbars="none"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/container_llt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp">
            <LinearLayout
                android:id="@+id/info_layout"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:background="@mipmap/bg_svip_mine">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageButton
                        android:id="@+id/menu_ibtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_caidan"
                        android:background="@android:color/transparent" />
                    <TextView
                        android:id="@+id/city_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="长沙"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/ic_down"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_user_photo_layout"
                    android:background="@mipmap/bg_main_track"
                    android:layout_width="136dp"
                    android:layout_height="140dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <com.zkjinshi.svip.view.CircleImageView
                        android:id="@+id/main_user_photo_civ"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:layout_gravity="center"
                        android:scaleType="center"
                        android:clickable="true"
                        android:background="@mipmap/ic_main_user_default_photo_nor"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/name_tv"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smith"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <View
                        android:layout_centerInParent="true"
                        android:id="@+id/line"
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="#ffffff"></View>

                    <TextView
                        android:id="@+id/level_tv"
                        android:layout_toLeftOf="@+id/line"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIP 1 (未激活)"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/distance_tv"
                        android:layout_toRightOf="@+id/line"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有订单  距离18km"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:layout_marginLeft="10dp"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/white_llt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info_layout"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/tips_layout"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="#ffffff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="您的VIP身份尚未激活，"
                        android:textColor="#101010"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="立即激活"
                        android:textColor="#1c74d9"
                        android:textSize="14sp"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/ic_right_blue"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e3e3e3"/>
                <LinearLayout
                    android:id="@+id/order_llt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#ffffff">

                    <com.zkjinshi.svip.view.CircleImageView
                        android:id="@+id/civ_shop_icon"
                        android:layout_margin="10dp"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:src="@mipmap/img_avatar_hotel" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp">
                        <LinearLayout
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/shop_name_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="长沙 芙蓉国温德姆至尊豪廷大酒店 >"
                                android:textColor="#828282"
                                android:textSize="12sp"
                                android:singleLine="true"
                                android:ellipsize="marquee"
                                android:clickable="true"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:layout_weight="1"/>
                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/ratingBar"
                                android:numStars="5"
                                android:rating="4"
                                android:isIndicator="true"
                                android:stepSize="1"
                                style="@style/myRatingBar"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_order_status"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="你已经提交订单，请等待酒店确认"
                            android:textColor="#030003"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="豪华大床房 ｜ 11/02 入住 ｜2晚  |  ¥1200"
                            android:textColor="#828282"
                            android:textSize="12sp"
                            android:id="@+id/tv_book_info"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />
                    </LinearLayout>
                </LinearLayout>
                <!--<ListView-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:id="@+id/ad_listview"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"></ListView>-->
                <!--<TextView-->
                <!--android:id="@+id/empty_listview"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="100dp"-->
                <!--android:gravity="center"-->
                <!--android:text="暂无数据"-->
                <!--android:textColor="#828282"-->
                <!--android:textSize="16sp"/>-->

            </LinearLayout>

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_gravity="center"/>


            <WebView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/white_llt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/webView"
                />


        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/frame_bg"
        android:id="@+id/relativeLayout2">


        <ImageView
            android:id="@+id/main_shop"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_hotel"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/main_msg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_lianxiren"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/main_msg_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="0"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ellipse_1"
            android:gravity="center"/>

    </RelativeLayout>

    <com.zkjinshi.svip.view.GooeyMenu
        android:id="@+id/gooey_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:fab_radius="@dimen/big_circle_radius"
        app:gap_between_menu_fab="@dimen/min_gap"
        app:menu_radius="@dimen/small_circle_radius"
        app:no_of_menu="3"
        app:menu_drawable="@array/drawable_array"/>




</RelativeLayout>
