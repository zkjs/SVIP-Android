<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#f5f5f5">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#000000">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_lef_jiudian"
            android:scaleType="centerInside"/>
        
        <TextView
            android:layout_toRightOf="@id/back_iv"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="当前城市：长沙"
            android:textColor="#ffffff"/>
        
        
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/title"
        android:id="@+id/header_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ebebeb"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/radius_frame_bg"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sousuo"/>
            <EditText
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:background="@android:color/transparent"
                android:textSize="12sp"
                android:text=""
                android:hint="城市/行政区/拼音"
                android:textColor="#707070"
                android:textColorHint="#e3e3e3"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_below="@id/header_search"
        android:scrollbars="none"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="定位城市"
                android:textColor="#707070"/>

            <me.kaede.tagview.TagView
                android:id="@+id/tagview_gps_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                app:lineMargin="10dp"
                app:tagMargin="20dp"
                app:textPaddingBottom="10dp"
                app:textPaddingLeft="30dp"
                app:textPaddingRight="30dp"
                app:textPaddingTop="10dp">
            </me.kaede.tagview.TagView>

            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="最近访问城市"
                android:textColor="#707070"/>

            <me.kaede.tagview.TagView
                android:id="@+id/tagview_last_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                app:lineMargin="10dp"
                app:tagMargin="20dp"
                app:textPaddingBottom="10dp"
                app:textPaddingLeft="30dp"
                app:textPaddingRight="30dp"
                app:textPaddingTop="10dp">
            </me.kaede.tagview.TagView>
            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="热门城市"
                android:textColor="#707070"/>

            <me.kaede.tagview.TagView
                android:id="@+id/tagview_hot_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                app:lineMargin="10dp"
                app:tagMargin="20dp"
                app:textPaddingBottom="10dp"
                app:textPaddingLeft="30dp"
                app:textPaddingRight="30dp"
                app:textPaddingTop="10dp">
            </me.kaede.tagview.TagView>

            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="全部城市"
                android:textColor="#707070"/>


        </LinearLayout>
    </ScrollView>



</RelativeLayout>
