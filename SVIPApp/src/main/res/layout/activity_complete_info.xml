<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zkjinshi="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_svip_mine"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zkjinshi.svip.view.ItemTitleView
        android:id="@+id/itv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zkjinshi:leftImage="@mipmap/icon_white_img_back"
        zkjinshi:itemTitleColor="#FFFFFF" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="86dp"
        android:gravity="center">

        <com.zkjinshi.svip.view.CircleImageView
            android:id="@+id/civ_user_avatar"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:scaleType="center"
            android:background="@drawable/main_photo_btn_selector" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="173dp"
        android:layout_marginTop="56dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_nick_name"
            android:layout_width="173dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:hint="@string/nickname"
            android:singleLine="true"
            android:textSize="14sp"
            android:background="#00000000"
            android:textColorHint="@color/Gray9E9E9E"
            android:gravity="center_vertical|left" />

        <View
            android:layout_alignBottom="@id/et_nick_name"
            android:layout_height="1px"
            android:background="@android:color/white"
            android:layout_width="match_parent"/>

    </RelativeLayout>

    <RelativeLayout
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="173dp"
        android:layout_height="wrap_content">
        
        <RadioGroup
            android:id="@+id/rg_sex"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb_male"
                    android:button="@null"
                    android:layout_marginLeft="29dp"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/mine_rb_male" >
                </RadioButton>

                <RadioButton
                    android:id="@+id/rb_female"
                    android:button="@null"
                    android:layout_marginLeft="58dp"
                    android:background="@drawable/mine_rb_female"
                    android:layout_width="28dp"
                    android:layout_height="28dp">
                </RadioButton>

        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp">

        <ImageButton
            android:id="@+id/ibtn_qian_jin"
            android:layout_width="22dp"
            android:layout_height="21.50dp"
            android:background="@mipmap/ic_qianjin" />

    </RelativeLayout>

</LinearLayout>