<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_shop_logo"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:background="@mipmap/img_dingdanxiangqing"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_mask" />

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="酒店名"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_shop_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_shop_name"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="酒店副标题"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>

        <View
            android:id="@+id/v_white_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:visibility="gone"></View>

        <LinearLayout
            android:id="@+id/ll_shop_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:minHeight="64dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shop_des"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:paddingRight="88dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="商家描述"
                android:textColor="@color/darkGray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_shop_add"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:text="商家地址"
                android:textColor="@color/lightGray"
                android:textSize="12sp" />

        </LinearLayout>

        <View style="@style/BlackLineBorder"></View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="64dp"
            android:weightSum="2">
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_saler_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:minHeight="128dp"
            android:paddingRight="20dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <com.zkjinshi.svip.view.CircleImageView
                    android:id="@+id/civ_saler_avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:src="@mipmap/img_avatar_hotel" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/circle_bg"
                    android:src="@mipmap/logo_white"
                    android:scaleType="centerInside"/>

            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>


</FrameLayout>