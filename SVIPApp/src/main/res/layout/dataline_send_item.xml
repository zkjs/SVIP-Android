<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="6.0dip"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    android:paddingTop="6.0dip">

    <include
        android:id="@id/datetime"
        layout="@layout/dataline_time_item" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/datetime">

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="13dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="@null"
            android:visibility="gone"
            android:textColor="#6C6C6C"
            android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@id/erricon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:clickable="false"
                    android:src="@drawable/aio_send_fail"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/sendtextprogressbar"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:indeterminateDrawable="@drawable/common_loading3"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:focusable="true"
                    android:gravity="left|center_vertical"
                    android:lineSpacingExtra="2dp"
                    android:minHeight="50dp"
                    android:padding="5dp"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:addStatesFromChildren="true"
                    android:background="@drawable/bg_chat_right_orange"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="2.0dip"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="17dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="email|phone|web"
                        android:gravity="center_vertical|left"
                        android:lineSpacingExtra="2.0dip"
                        android:maxWidth="270dp"
                        android:padding="7.0dip"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="100dp"
                        android:maxWidth="100dp"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:clickable="false"
                        android:gravity="center"
                        android:scaleType="centerInside"
                        android:src="@mipmap/skin_aio_ptt_record_user_nor"
                        android:visibility="gone" />

                    <include
                        layout="@layout/dataline_card_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@id/icon"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            fresco:actualImageScaleType="centerInside"
            fresco:placeholderImage="@mipmap/list_img_selfish"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundAsCircle="true"
            fresco:roundedCornerRadius="0dp" />

        <CheckBox
            android:id="@+id/cb_select"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:button="@null"
            android:clickable="false"
            android:drawableLeft="@drawable/checkbox_selector"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>