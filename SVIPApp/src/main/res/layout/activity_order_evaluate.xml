<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">

    <ScrollView
        android:id="@+id/order_evaluate_sv_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:scrollbarStyle="insideInset"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/order_evaluate_layout_title"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="206dp">

                <ImageView
                    android:id="@+id/order_evaluate_iv_goods"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:scaleType="fitXY"
                    android:layout_height="206dp"
                    android:src="@mipmap/img_dingdanxiangqing"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="#33000000"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/order_evaluate_ibtn_back"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:src="@mipmap/ic_fanhui_orange"/>

                    <ImageButton
                        android:id="@+id/order_evaluate_ibtn_more"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:visibility="gone"
                        android:src="@mipmap/ic_more"/>

                    <TextView
                        android:id="@+id/order_evaluate_tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="订单详情"/>

                </RelativeLayout>

                <com.zkjinshi.svip.view.CircleImageView
                    android:id="@+id/order_evaluate_iv_sales_photo"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_logo_zhanwei"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/order_evaluate_iv_sales_name"
                    android:layout_below="@id/order_evaluate_iv_sales_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:text="@null"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/order_evaluate_tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单内容"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#101010"
                    android:textSize="14sp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/order_evaluate_iv_hotel_photo"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:scaleType="fitXY"
                        android:layout_margin="10dp"
                        android:src="@mipmap/img_avatar_hotel"
                        />

                    <TextView
                        android:id="@+id/order_evaluate_tv_hotel_name"
                        android:layout_toRightOf="@id/order_evaluate_iv_hotel_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:textColor="#525252"
                        android:text="@null"/>

                    <TextView
                        android:id="@+id/order_evaluate_tv_room_info"
                        android:layout_toRightOf="@id/order_evaluate_iv_hotel_photo"
                        android:layout_below="@id/order_evaluate_tv_hotel_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:textColor="#525252"
                        android:text="@null"/>

                    <TextView
                        android:id="@+id/order_evaluate_tv_room_total_price"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/order_evaluate_tv_hotel_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="50dp"
                        android:textColor="#525252"
                        android:text="@null"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textColor="#828282"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:text="入住时间"/>

                    <TextView
                        android:id="@+id/order_evaluate_tv_check_in_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#828282"
                        android:textSize="14sp"
                        android:text="@null"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textColor="#828282"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:text="入住人"/>

                    <TextView
                        android:id="@+id/order_evaluate_tv_check_in_names"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#828282"
                        android:textSize="14sp"
                        android:text="@null"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textColor="#828282"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:text="发票信息"/>

                    <TextView
                        android:id="@+id/order_evaluate_tv_invoice_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#828282"
                        android:textSize="14sp"
                        android:text="暂无"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textColor="#828282"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:text="订单备注"/>

                    <TextView
                        android:id="@+id/order_evaluate_tv_remark_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#828282"
                        android:layout_marginBottom="20dp"
                        android:textSize="14sp"
                        android:text="暂无"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_evaluate_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/order_evaluate_cb_poor"
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:button="@null"
                            android:text="差"
                            android:textColor="#101010"
                            android:drawablePadding="15dp"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:drawableTop="@drawable/star_checkbox_selector"
                            android:visibility="visible"/>

                        <CheckBox
                            android:id="@+id/order_evaluate_cb_common"
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:button="@null"
                            android:text="一般"
                            android:textColor="#101010"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:drawablePadding="15dp"
                            android:gravity="center"
                            android:drawableTop="@drawable/star_checkbox_selector"
                            android:visibility="visible"/>


                        <CheckBox
                            android:id="@+id/order_evaluate_cb_gratify"
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:button="@null"
                            android:text="满意"
                            android:textColor="#101010"
                            android:drawablePadding="15dp"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:drawableTop="@drawable/star_checkbox_selector"
                            android:visibility="visible"/>

                        <CheckBox
                            android:id="@+id/order_evaluate_cb_great_gratify"
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:button="@null"
                            android:text="非常满意"
                            android:textColor="#101010"
                            android:drawablePadding="15dp"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:drawableTop="@drawable/star_checkbox_selector"
                            android:visibility="visible"/>

                        <CheckBox
                            android:id="@+id/order_evaluate_cb_highly_recommend"
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:button="@null"
                            android:text="强烈推荐"
                            android:textColor="#101010"
                            android:drawablePadding="15dp"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:drawableTop="@drawable/star_checkbox_selector"
                            android:visibility="visible"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/order_evaluate_etv_content"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:padding="10dp"
                        android:gravity="left|top"
                        android:visibility="gone"
                        android:background="@drawable/bg_order_evaluate_input"
                        android:hint="感谢您的评价，说说您满意的理由"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:textColorHint="#828282"
                        android:textColor="#101010"
                        />

                    <Button
                        android:id="@+id/order_evaluate_btn_ok"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="确认"
                        android:visibility="gone"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/btn_black_selector_shape"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

            </LinearLayout>

            <include
                layout="@layout/layout_comple_evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>