<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/title_layout"
        android:background="@drawable/bg_white">

        <ImageButton
            android:id="@+id/header_back_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:background="@null"
            android:src="@mipmap/ic_fanhui_orange"/>

        <TextView
            android:id="@+id/header_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价"
            android:textSize="16sp"
            android:textColor="#5e5e5e"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/order_evaluate_sv_body"
        android:layout_below="@id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="insideInset"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/order_evaluate_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/order_evaluate_cb_poor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.0"
                            android:background="@null"
                            android:button="@null"
                            android:drawablePadding="15dp"
                            android:drawableTop="@drawable/star_checkbox_selector"
                            android:gravity="center"
                            android:text="差"
                            android:textColor="#101010"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <CheckBox
                            android:id="@+id/order_evaluate_cb_common"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.0"
                            android:background="@null"
                            android:button="@null"
                            android:drawablePadding="15dp"
                            android:drawableTop="@drawable/star_checkbox_selector"
                            android:gravity="center"
                            android:text="一般"
                            android:textColor="#101010"
                            android:textSize="14sp"
                            android:visibility="visible" />


                        <CheckBox
                            android:id="@+id/order_evaluate_cb_gratify"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.0"
                            android:background="@null"
                            android:button="@null"
                            android:drawablePadding="15dp"
                            android:drawableTop="@drawable/star_checkbox_selector"
                            android:gravity="center"
                            android:text="满意"
                            android:textColor="#101010"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <CheckBox
                            android:id="@+id/order_evaluate_cb_great_gratify"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.0"
                            android:background="@null"
                            android:button="@null"
                            android:drawablePadding="15dp"
                            android:drawableTop="@drawable/star_checkbox_selector"
                            android:gravity="center"
                            android:text="非常满意"
                            android:textColor="#101010"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <CheckBox
                            android:id="@+id/order_evaluate_cb_highly_recommend"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.0"
                            android:background="@null"
                            android:button="@null"
                            android:drawablePadding="15dp"
                            android:drawableTop="@drawable/star_checkbox_selector"
                            android:gravity="center"
                            android:text="强烈推荐"
                            android:textColor="#101010"
                            android:textSize="14sp"
                            android:visibility="visible" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/order_evaluate_etv_content"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_order_evaluate_input"
                        android:gravity="left|top"
                        android:hint="感谢您的评价，说说您满意的理由"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLength="140"
                        android:padding="10dp"
                        android:textColor="#101010"
                        android:textColorHint="#828282"
                        android:textSize="14sp"
                        android:visibility="gone" />


                </LinearLayout>

            </LinearLayout>

            <include
                layout="@layout/layout_comple_evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/order_evaluate_btn_ok"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="完成"
        android:textSize="16sp"
        android:textColor="@color/White"
        android:visibility="gone"
        android:background="@drawable/btn_yellow_selector"/>

</RelativeLayout>