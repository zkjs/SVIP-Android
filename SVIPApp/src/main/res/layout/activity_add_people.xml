<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zkjinshi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/title_layout"
        android:background="@drawable/bg_white">
        <ImageView
            android:id="@+id/header_back_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_fanhui_orange"/>
        <TextView
            android:id="@+id/header_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textSize="16sp"
            android:textColor="#5e5e5e"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#f5f2f5">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="输入入住人姓名"
            android:background="@android:color/transparent"
            android:ems="10"
            android:id="@+id/et_setting_input" />

        <View
            android:background="#bbbbbb"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="该名字用于入住时确定，不会透露给他人"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_setting_tips"
            />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="保存"
            android:textSize="16sp"
            android:textColor="@color/White"
            android:background="@drawable/btn_yellow_selector"/>
    </LinearLayout>


</LinearLayout>
