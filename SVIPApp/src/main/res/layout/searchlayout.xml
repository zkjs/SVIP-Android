<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/serchlayout"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:clickable="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/left_title_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_fanhui_orange"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="6.0dip"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_cancel"
            android:layout_marginTop="6.0dip"
            android:background="@drawable/city_search_bg" >

            <ImageView
                android:id="@+id/search_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:src="@drawable/ic_action_action_search" />

            <EditText
                android:id="@+id/input"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:layout_toRightOf="@id/search_check"
                android:background="@null"
                android:hint="@string/city_hotcity_searchedittext_hint"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="12.0sp" />

            <ImageButton
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/input"
                android:layout_centerVertical="true"
                android:layout_marginRight="9.0dp"
                android:background="@drawable/btn_gray_delete_selector"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/searchresult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/city_search_bg"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/whiteGray"
        android:dividerHeight="0.50dp"
        android:listSelector="@android:color/transparent">
    </ListView>

</LinearLayout>