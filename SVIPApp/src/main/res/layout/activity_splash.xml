<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_marginTop="-160dp"
        android:layout_marginLeft="-100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/splash_body_layout"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@mipmap/bg_splash" />

    <LinearLayout
        android:id="@+id/splash_msg_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="visible"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splash_logo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_logo1"/>

        <TextView
            android:id="@+id/splash_ad_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:visibility="visible"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="@string/splash_ad_info"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/bg_shan"/>

</RelativeLayout>
