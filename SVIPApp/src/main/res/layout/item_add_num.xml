<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:id="@+id/item_layout">
        <View
            android:id="@+id/upline_v"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e3e3e3"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="#ffffff"
            android:paddingLeft="10dp"
            android:paddingRight="0dp">
            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#666666"
                android:text="房间数量"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/must_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#ff5722"
                android:text="*"
                android:layout_above="@id/title_tv"
                android:layout_toRightOf="@id/title_tv"
                android:layout_marginBottom="-20dp"
                android:layout_marginLeft="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/input_et"
                    android:gravity="right|center_vertical"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:text=""
                    android:hint="添加房间数量"
                    android:textColorHint="#bbbbbb"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:focusable="false"
                    android:layout_marginRight="10dp"/>


                <ImageButton
                    android:id="@+id/add_ibtn"
                    android:layout_marginLeft="10dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/ic_jia_yellow"
                    android:scaleType="centerInside"
                    android:background="@drawable/bg_btn_num"/>
                <ImageButton
                    android:id="@+id/sub_ibtn"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/ic_jian_yellow"
                    android:scaleType="centerInside"
                    android:background="@drawable/bg_btn_num"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/downline_v"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e3e3e3"/>

    </LinearLayout>

</LinearLayout>

