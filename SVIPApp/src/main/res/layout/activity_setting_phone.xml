<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zkjinshi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.zkjinshi.svip.view.ItemTitleView
        android:id="@+id/itv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#191223"
        zkjinshi:itemTitle="修改手机号码"
        zkjinshi:leftImage="@mipmap/icon_white_img_back"
        zkjinshi:itemTitleColor="#FFFFFF"
        />

    <LinearLayout
        android:id="@+id/llyt_org"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证原手机"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="12dp"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_org_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12457899544"
            android:textColor="#7c7c7c"
            android:textSize="18sp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_input_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:visibility="gone"
        >

        <EditText
            android:id="@+id/et_input_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:hint="@string/please_input_phone_number"
            android:inputType="number"
            android:maxLength="11"
            android:background="#00000000"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="@color/Gray9E9E9E"
            android:textSize="18sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/et_input_phone"
            android:layout_alignRight="@id/et_input_phone"
            android:layout_alignTop="@id/et_input_phone"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/iv_phone_right"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignRight="@id/et_input_phone"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/img_input_right"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_phone_error"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignRight="@id/et_input_phone"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/img_input_warning"
                android:visibility="gone" />
        </FrameLayout>

        <View
            style="@style/LineC7C7C7"
            android:layout_alignBottom="@+id/et_input_phone"></View>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_verify_code"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_input_phone"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/et_verify_code"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="false"
            android:gravity="left"
            android:inputType="phone"
            android:padding="5dp"
            android:background="#00000000"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="@color/Gray9E9E9E"
            android:hint="验证码"
            android:textSize="18sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/et_verify_code"
            android:layout_alignRight="@id/et_verify_code"
            android:layout_alignTop="@id/et_verify_code"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/iv_verify_right"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignRight="@id/et_verify_code"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/img_input_right"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_verify_error"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignRight="@id/et_verify_code"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/img_input_warning"
                android:visibility="gone" />
        </FrameLayout>

        <View
            style="@style/LineC7C7C7"
            android:layout_alignBottom="@+id/et_verify_code"></View>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rl_verify_code"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_bg_01_selector"
        android:enabled="false"
        android:text="发送验证码"
        android:textColor="@color/White"
        android:textSize="16sp" />



</LinearLayout>