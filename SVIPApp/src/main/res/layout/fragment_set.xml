<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white">

    <ScrollView
        android:scrollbars="none"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/set_layout_user_account_info"
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="@drawable/bg_layout_item_selector"
                android:layout_height="80dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/set_uv_user_photo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    fresco:roundAsCircle="true"
                    fresco:roundedCornerRadius="0dp"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:placeholderImage="@mipmap/ic_main_user_default_photo_nor"
                    fresco:placeholderImageScaleType="centerCrop"
                    />

                <TextView
                    android:id="@+id/set_uv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/set_uv_user_photo"
                    android:layout_marginLeft="10dp"
                    android:text="登录/注册"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_centerVertical="true"
                    />
                
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/ic_right_orange"
                    android:scaleType="centerInside"/>

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e3e3e3"/>

            <RelativeLayout
                android:id="@+id/set_layout_order_manager"
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="@drawable/bg_layout_item_selector"
                android:layout_height="48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="订单管理"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/ic_right_orange"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/set_layout_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0个待确认订单"
                    android:textColor="#ffc56e"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="45dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e3e3e3"/>

            <RelativeLayout
                android:id="@+id/set_layout_set"
                android:layout_width="match_parent"
                android:clickable="true"
                android:background="@drawable/bg_layout_item_selector"
                android:layout_height="48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="设置"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/ic_right_orange"
                    android:scaleType="centerInside"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e3e3e3"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>