<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/bg_white">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/list_room_pic_iv"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@mipmap/url_image_loading"
            fresco:placeholderImageScaleType="centerInside"
            fresco:failureImage="@mipmap/url_image_failed"
            fresco:failureImageScaleType="centerInside"
            />

        <ImageView
            android:id="@+id/list_selected_pic_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:src="@mipmap/ic_selected_room"/>
        <TextView
            android:id="@+id/list_room_type_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="豪华大床房"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:background="#8f101010"
            android:paddingLeft="5dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>