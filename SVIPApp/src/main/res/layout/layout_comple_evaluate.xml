<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/order_evaluate_result_layout"
    android:background="@drawable/bg_white"
    android:visibility="gone"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/order_evaluate_result_cb_poor"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:text="差"
            android:textColor="#101010"
            android:drawablePadding="15dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:clickable="false"
            android:drawableTop="@drawable/star_checkbox_selector"
            android:visibility="visible"/>

        <CheckBox
            android:id="@+id/order_evaluate_result_cb_common"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:text="一般"
            android:clickable="false"
            android:textColor="#101010"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:drawableTop="@drawable/star_checkbox_selector"
            android:visibility="visible"/>

        <CheckBox
            android:id="@+id/order_evaluate_result_cb_gratify"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:text="满意"
            android:clickable="false"
            android:textColor="#101010"
            android:drawablePadding="15dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawableTop="@drawable/star_checkbox_selector"
            android:visibility="visible"/>

        <CheckBox
            android:id="@+id/order_evaluate_result_cb_great_gratify"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:clickable="false"
            android:text="非常满意"
            android:textColor="#101010"
            android:drawablePadding="15dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawableTop="@drawable/star_checkbox_selector"
            android:visibility="visible"/>

        <CheckBox
            android:id="@+id/order_evaluate_result_cb_highly_recommend"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:text="强烈推荐"
            android:clickable="false"
            android:textColor="#101010"
            android:drawablePadding="15dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawableTop="@drawable/star_checkbox_selector"
            android:visibility="visible"/>

    </LinearLayout>

    <TextView
        android:id="@+id/order_evaluate_result_etv_content"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:gravity="left|top"
        android:visibility="visible"
        android:background="@drawable/bg_order_evaluate_input"
        android:text="@null"
        android:textSize="14sp"
        android:textColor="#101010"
        />

</LinearLayout>