<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/head_bar_layout"
        layout="@layout/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:padding="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <com.zkjinshi.svip.view.CircleImageView
                        android:id="@+id/civ_avatar"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@mipmap/ic_round_launcher" />

                    <View
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/bg_avatar_ring" />

                </RelativeLayout>

                <ImageView
                    android:layout_marginTop="26dp"
                    android:layout_width="81.3dp"
                    android:layout_height="49.5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/defoult_huangguan" />

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:padding="20dp"
                android:text="@string/credit_introduction"
                android:textColor="@color/Black"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>