<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/img_bg"
    android:visibility="invisible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:id="@+id/shop_scrollview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/shop_detail_tv_bg"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/img_shanjia"
                fresco:placeholderImageScaleType="fitXY"
                />

            <TextView
                android:id="@+id/shop_detail_tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffc56e"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="长沙芙蓉国温德姆至尊豪廷大酒"/>

            <TextView
                android:id="@+id/shop_detail_tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#B8B8B8"
                android:drawableLeft="@mipmap/ic_dizhi_gray"
                android:drawablePadding="15dp"
                android:layout_marginRight="15dp"
                android:text="长沙市芙蓉区芙蓉中路二段 106 号"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:id="@+id/shop_detail_tv_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#B8B8B8"
                android:text="010-85117777"
                android:drawableLeft="@mipmap/ic_phone_gray"
                android:drawablePadding="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#151515"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#44101010"/>

            <com.zkjinshi.svip.view.ShopListView
                android:id="@+id/shop_desc_list_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                android:fadingEdge="none"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:scrollingCache="false"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none" />

        </LinearLayout>

    </ScrollView>
    
</LinearLayout>
